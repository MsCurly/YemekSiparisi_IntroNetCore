@model KullaniciGirisi
@{
    Layout = "/Views/Shared/_Layout.cshtml";
}


<form method="post" asp-action="Siparis" asp-controller="Home">
    <div class="form-group">
        <label>Adınız:</label>
        <input class="form-control" asp-for="@Model.FullName" />
        <span asp-validation-for="@Model.FullName"></span>
    </div>
    <div class="form-group">
        <label>Eposta:</label>
        <input class="form-control" asp-for="@Model.Email" />
        <span asp-validation-for="@Model.Email"></span>
    </div>
    <div class="form-group">
        <label>Adres:</label>
        <input class="form-control" asp-for="@Model.Adress" />
        <span asp-validation-for="@Model.Adress"></span>
    </div>
    <div class="form-group">
        <label>Lütfen Yiyecek Seçiniz:</label>
        <select class="form-control" asp-for="@Model.IsAccepted">
            <option value="True">Pizza</option>
            <option value="True">Hamburger</option>
            <option value="True">Dürüm</option>
            <option value="True">Tavuk Şiş</option>
            <option value="False">Sipariş Vermek İstemiyorum!</option>

        </select>
        <span asp-validation-for="@Model.IsAccepted"></span>
    </div>


    <div class="form-group">
        <label>Lütfen Yan Ürün Seçiniz:</label>
        <select class="form-control" asp-for="@Model.IsAccepted">
            <option value="True">Çorba +2TL</option>
            <option value="True">Patates Kızartması +3TL</option>
            <option value="True">Tatlı +3TL</option>
            <option value="True">içecek +2TL</option>
            <option value="True">Hayır İstemiyorum</option>

        </select>
        <span asp-validation-for="@Model.IsAccepted"></span>
    </div>
    <input type="submit" name="name" value="Kaydet" class="btn btn-danger" />
</form>